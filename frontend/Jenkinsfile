pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'auction-system-frontend'
        GITHUB_REPO_URL = 'https://github.com/Ankur7470/real-time-auction-system.git'
    }

    triggers {
        githubPush()
    }

    stages {

         stage('Checkout') {
            steps {
                script {
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }

        stage('Detecting Frontend Changes') {
            steps {
                script {
                    def changes = sh(script: "git diff --name-only HEAD~1 HEAD | grep '^frontend/' || true", returnStdout: true).trim()
                    if (changes == "") {
                        echo "No changes in frontend folder. Skipping pipeline."
                        currentBuild.result = 'SUCCESS'
                        currentBuild.description = "No frontend changes"
                        error("No frontend changes")
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm ci'
                    sh 'npm run build'
                }
            }
        }

        stage('Build Frontend Docker Image') {
            steps {
                dir('frontend') {
                    script {
                        docker.build("${DOCKER_IMAGE_NAME}", '.')
                    }       
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', 'DockerHubCred') {
                        sh "docker tag $DOCKER_IMAGE_NAME ankur2k19/$DOCKER_IMAGE_NAME:latest"
                        // sh "docker tag $DOCKER_IMAGE_NAME abhi297/$DOCKER_IMAGE_NAME:latest"
                        sh "docker push ankur2k19/$DOCKER_IMAGE_NAME"
                        // sh "docker push abhi297/$DOCKER_IMAGE_NAME"
                    }
                }
            }
        }
        
        stage('Ansible Deployment') {
            steps {
                dir('frontend') {
                    script {
                        ansiblePlaybook(
                            playbook: 'ansible_playbook.yml',
                            inventory: 'inventory'
                        )
                    }
                }
            }
        }

    }
    
}
